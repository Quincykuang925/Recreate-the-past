let graphics;

function setup() {
  createCanvas(600, 600, WEBGL);
  graphics = createGraphics(400,400)
  graphics.background(0)
text1 = createGraphics (400,400)
  text1.fill(38,124,222)
  text1.textAlign(CENTER)
  // text1.textLeading()
    text1.textSize(20)
  text1.text('Visible Language',280, 50)
    text1.text('Intelligent Grap',270, 70)
   text1.text('Television of toronto',291, 90)
  text1.text('Newspaper of the future',310, 110)
    text1.text('Interactive Cinema',287, 130)
  text1.text('Physics and Media',287, 150)
    text1.text('Structured Video',280, 170)
  text1.text('Opera of the future',289, 190)
  text1.text('Special Imagining',285, 210)
  
  text2 = createGraphics (400,400)
  text2.fill(255)
  text2.textAlign(CENTER)
    text2.textSize(20)
  text2.text('Muriel Cooper',270, 50)
    text2.text('Ron MacNeil',261, 70)
   text2.text('Walter Bender',270, 90)
     text2.text('Gloriana Davenport',293, 110)
   text2.text('Neil Gershenfeld',282, 130)
   text2.text('Andy Lippman',272, 150)
text2.text('Tod Machover',270, 170)
  text2.text('Steve Benton',270, 190)
  
  
    text3 = createGraphics (400,400)
  text3.fill(32,101,212)
  text3.textAlign(CENTER)
