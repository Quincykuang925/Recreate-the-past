    text3.text('l l l ',300, 55)
  text3.fill(178,29,204)
  text3.text('Le',300, 310)
}

function draw() {
background(0)
  
  push()
  
  rotateX(frameCount * 0.007);
  rotateY(frameCount * 0.007);
  
  rotate(18.1)
    rotateX(12)
  rotateY(13)
  texture(text1)
// fill(255,200,100)
  plane(500,500)
  pop()
  
  push()
  rotate(18.1)
  rotateX(12)
  rotateY(17.8)
  
 rotateX(frameCount * 0.007);
  rotateY(frameCount * 0.007);
  
  texture(text2)
// fill(15,200,100)
  plane(500,500)
pop()
  
  
   push()
  rotate(18.12)
  rotateX(11.97)
  rotateY(17.8)
  
 rotateX(frameCount * 0.007);
  rotateY(frameCount * 0.007);
  
  texture(text3)
// fill(15,200,100)
  plane(600,600)
pop()
  
}
